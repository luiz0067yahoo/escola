<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alunoonline">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlunoOnline">
        <activity
            android:name=".activity.nota.LancamentoNotasActivity"
            android:exported="false" />
        <activity
            android:name=".activity.turma.ListaTurmaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.turma.CadastroTurmaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.disciplina.ListaDisciplinaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.disciplina.CadastroDisciplinaActivity"
            android:exported="false" />
        <activity
            android:name=".activity.professor.ListaProfessorActivity"
            android:exported="false" />
        <activity
            android:name=".activity.aluno.ListaAlunoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.professor.CadastroProfessorActivity"
            android:exported="false" />
        <activity
            android:name=".activity.aluno.CadastroAlunoActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example.alunoonline.model" />
        <meta-data
            android:name="DATABASE"
            android:value="aluno_online.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
    </application>

</manifest>